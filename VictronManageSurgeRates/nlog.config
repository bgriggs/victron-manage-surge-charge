<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

	<!-- the targets to write to -->
	<targets>
		<target xsi:type="Console" name="c" layout="${date}|${level:uppercase=true}|${logger}|${message} ${exception}"/>

		<target name="jsonFile" xsi:type="File" fileName="victron-manage-surge-rates.log" archiveAboveSize="10000000" maxArchiveFiles="1">
			<layout xsi:type="JsonLayout" includeAllProperties="false">
				<attribute name="time" layout="${longdate}" />
				<attribute name="level" layout="${level:upperCase=true}"/>
				<attribute name="logger" layout="${logger}" />
				<attribute name="message" layout="${message}" />
			</layout>
		</target>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Debug" writeTo="jsonFile,c" />
	</rules>
</nlog>